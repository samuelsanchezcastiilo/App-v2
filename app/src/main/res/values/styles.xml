<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>




    <style name="TextosPrimarios">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>


    <style name="TextosSecondarios">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:enabled">false</item>

    </style>

    <style name="checks">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <style name="checks1" parent="checks1">
        <item name="android:textSize">1sp</item>
    </style>

    <style name="editextoovservaciones">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Observaciones</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text|textMultiLine</item>


    </style>

    <style name="botonesfirmas">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:tint">@color/accent</item>
        <item name="android:background">@android:color/transparent</item>

    </style>
    <style name="botonesfirmas." parent="botonesfirmas">
        <item name="android:tint">@color/secondary_text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="saveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <!-- estilos para el fragment ispection two la cual contiene la galeria de imagenes tomadas en
    los momentos antes durante y despues -->
    <style name="horizontalScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="relativecontentImagesIspection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="layoutAddNewImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="layoutContenButtons">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/addimg</item>
        <item name="android:layout_marginTop">13dp</item>



    </style>

    <style name="buttonnewPhoto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_new_capture</item>
    </style>

    <style name="buttonSaveToServer" parent="buttonnewPhoto">
        <item name="android:src">@drawable/ic_backup_black_24dp</item>
    </style>

    <style name="imgSave">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>


    </style>





</resources>