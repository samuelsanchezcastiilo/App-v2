<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/conteFactura"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/itenFactura"
            style="@style/TextosPrimarios"
            android:text="Factura: "
            android:textSize="19sp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/numeroFacturaProducto"
            style="@style/TextosSecondarios"
            android:layout_toRightOf="@+id/itenFactura"
            android:textSize="19sp"
            android:text="4885"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/divider"
            style="@style/divider"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/numeroFacturaProducto"/>
        <WebView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/contenFactura"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            >
        </WebView>
    </RelativeLayout>


</LinearLayout>